{
    "name": "Facebook Unfriender - One Click",
    "manifest_version": 2,
    "version": "1.0.1",
    "description": "Unfriend Facebook friends easily with just one click.",
    "background": {
      "scripts": ["facebook-unfriender-background.js"]
    },
    "content_scripts": [
      {
        "matches": ["*://*.facebook.com/*&source_ref=pb_friends_tl"],
        "js": ["facebook-unfriender-one-click.js"]
      }
    ],
    "permissions": [
      "*://*.facebook.com/*&source_ref=pb_friends_tl",
      "tabs",
      "webRequest",
      "webRequestBlocking"
    ],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }